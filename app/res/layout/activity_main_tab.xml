<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:background="@color/bg_gray_lite" />

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.adai.gkdnavi.widget.RichRadioButton
            android:id="@+id/rb_album"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="-5dp"
            android:drawableTop="@drawable/bg_main_tab_item_picture"
            android:gravity="center"
            android:text="@string/photo_album"
            android:textColor="@color/main_tab_host_title_color"
            android:textSize="12sp"
            app:top_height="32dp"
            app:top_width="32dp" />

        <com.adai.gkdnavi.widget.RichRadioButton
            android:id="@+id/rb_application"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="-5dp"
            android:drawableTop="@drawable/bg_main_tab_item_home"
            android:gravity="center"
            android:text="@string/remote"
            android:textColor="@color/main_tab_host_title_color"
            android:textSize="12sp"
            app:top_height="32dp"
            app:top_width="32dp" />

        <!--<com.adai.gkdnavi.widget.RichRadioButton-->
        <!--android:id="@+id/rb_square"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:button="@null"-->
        <!--android:drawablePadding="-5dp"-->
        <!--android:drawableTop="@drawable/bg_main_tab_item_squre"-->
        <!--android:gravity="center"-->
        <!--android:text="@string/community"-->
        <!--android:textColor="@color/main_tab_host_title_color"-->
        <!--android:textSize="12sp"-->
        <!--app:top_height="32dp"-->
        <!--app:top_width="32dp"/>-->


        <com.adai.gkdnavi.widget.RichRadioButton
            android:id="@+id/rb_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="-5dp"
            android:drawableTop="@drawable/bg_main_tab_item_persional"
            android:gravity="center"
            android:text="@string/about_app"
            android:textColor="@color/main_tab_host_title_color"
            android:textSize="12sp"
            app:top_height="32dp"
            app:top_width="32dp" />
    </RadioGroup>
</LinearLayout>
