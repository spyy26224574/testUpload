<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:orientation="vertical"
    tools:context="com.adai.camera.novatek.settting.subsetting.NovatekPasswordSettingActivity">

    <include layout="@layout/layout_include_center_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_ssid_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="wifi_camera_ac54_"
            android:textColorHint="@color/gray"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_ssid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="@string/digits_camera_name"
            android:hint="@string/wifi_input_ssid"
            android:maxLength="16"
            android:textColorHint="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>